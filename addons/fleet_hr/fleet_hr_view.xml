<?xml version="1.0"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="fleet_hr_driver_form">
            <field name="name">hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <field name="category_ids" position="after">
                    <label for="driver_employee_num" class="oe_edit_only" groups="base.group_hr_user"/>
                    <field name="driver_employee_num" string="Employee #"/>
                </field>
                <page name="Personal" position="after">
                    <page name="Fleet" string="Fleet Information" groups="base.group_hr_user,fleet.group_fleet_manager">
                        <group colspan="2">
                            <field name="driver_license_state"/>
                            <field name="driver_license_num"/>
                            <field name="driver_license_class"/>
                            <field name="driver_license_exp"/>
                            <field name="driver_medical_exp"/>
                        </group>
                    </page>
                </page>
            </field>
        </record>

        <record model="ir.ui.view" id="fleet_hr_driver_tree">
            <field name="name">hr.employee.tree</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <xpath expr="//tree[@string='Employees']" position="attributes">
                    <attribute name="colors">
                        orange:driver_license_renewal_due_soon or driver_medical_renewal_due_soon;
                        red:driver_license_renewal_overdue or driver_medical_renewal_overdue
                    </attribute>
                </xpath>
                <xpath expr="//field[@name='job_id']" position="after">
                    <field name="driver_license_exp"/>
                    <field name="driver_medical_exp"/>
                    <field name="driver_license_renewal_due_soon" invisible="1"/>
                    <field name="driver_license_renewal_overdue" invisible="1" />
                    <field name="driver_medical_renewal_due_soon" invisible="1"/>
                    <field name="driver_medical_renewal_overdue" invisible="1" />
                </xpath>
            </field>
        </record>

        <record model="ir.actions.act_window" id="fleet.fleet_vehicle_act">
            <field name="context">{'show_driver':1}</field>
        </record>

        <record model="ir.ui.view" id="fleet_vehicle_driver_tree">
            <field name="name">fleet.vehicle.tree</field>
            <field name="model">fleet.vehicle</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_tree"/>
            <field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <xpath expr="//tree[@string='Vehicle']" position="attributes">
                    <attribute name="colors">
                        orange:contract_renewal_due_soon or driver_license_renewal_due_soon or driver_medical_renewal_due_soon or dmv_reg_warning=='warning';
                        red:contract_renewal_overdue or driver_license_renewal_overdue or driver_medical_renewal_overdue or dmv_reg_warning=='expired'
                    </attribute>
                </xpath>
                <xpath expr="//field[@name='location']" position="after">
                    <field name="driver_license_renewal_due_soon" invisible="1"/>
                    <field name="driver_license_renewal_overdue" invisible="1" />
                    <field name="driver_medical_renewal_due_soon" invisible="1"/>
                    <field name="driver_medical_renewal_overdue" invisible="1" />
                </xpath>
            </field>
        </record>

    </data>
</openerp>
